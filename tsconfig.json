{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "outDir": "lib",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "moduleResolution": "nodenext",
    "jsx": "react-jsx",
